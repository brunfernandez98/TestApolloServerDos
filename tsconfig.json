
  {
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["es2022", "dom"],
      "module": "commonjs",
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": true,
      "target": "ESNext",
      "types": ["node"],
      "outDir": "build",
      "resolveJsonModule": true
    }, 
    "exclude" : [
      "node_modules",
      "build"
    ]
    
  }

